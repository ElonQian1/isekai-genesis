{
  "name": "card-game-monorepo",
  "version": "0.1.0",
  "description": "精美 3D 网页卡牌游戏 - Rust + Babylon.js",
  "private": true,
  "scripts": {
    "dev": "concurrently -k -p \"[{name}]\" -n \"SERVER,CLIENT\" -c \"cyan,green\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cargo run -p game-server",
    "logs:clear": "node -e \"require('fs').writeFileSync('文档/日志/server.log','');require('fs').writeFileSync('文档/日志/client.log','');console.log('日志已清空')\"",
    "logs:view:server": "type 文档\\日志\\server.log",
    "logs:view:client": "type 文档\\日志\\client.log",
    "build:wasm": "cd crates/game-wasm && wasm-pack build --target web",
    "build:client": "cd client && npm run build",
    "build": "npm run build:wasm && npm run build:client",
    "install:client": "cd client && npm install",
    "postinstall": "npm run install:client"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
